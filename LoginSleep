#!/bin/bash
##### global variable:
##### LoginSleep        time to sleep, executing this scipt...
#####                   default=3600
[ -f /etc/default/LoginSleep ] && source /etc/default/LoginSleep

printf "\r\n--------------------------------------------------\r\n"
printf     "     connection successful -- ready to tunnel"
printf "\r\n--------------------------------------------------\r\n"

if [ "$2" = rules ] && [ -f ~/iptables ]
   then
      echo
      cat ~/iptables
      echo
   fi

sleep "${LoginSleep:-3600}"
exit $?
